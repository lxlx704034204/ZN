/* pages/myorder/myorder.wxss */
 @import "/template/wxss/waterfall.wxss"; 

.backhome{
  display: none;
}
canvas{
  width: 750px;
  height: 1334px;
  position: absolute;
  z-index: -999;
  left: -9999999999px;
}
.scrollView{
  background-color: #F1F1F1;
  padding:20rpx 0 ;
}
.nodata {
  flex-direction: row;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
  margin-top: 200rpx;
}
.options{
  position: relative;
  height:68px;
}
.options .flexbox{
  position: fixed;
  background-color: #fff;
  top: 68px;
  left: 0;
  width: 100%;
  z-index: 99;
  height: 54px;
}
.option{
  width: 25%;
  text-align: center;
  font-size:26rpx;
  font-weight:bold;
  color:rgba(60,60,60,1);
  line-height: 90rpx;
  padding: 14rpx 0 4rpx;
  position: relative;
}
.option text{
  display: inline-block;
  border-bottom: 6rpx solid transparent;
}
.active text{
  color:  #FF2245;
  border-bottom-color:  #FF2245;
}


.option .order_num{
  position: absolute;
  font-size: 18rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #FD0D1A;
  line-height: 30rpx;
  text-align: center;
  color:  #fff;
  top: 20rpx;
  left: 124rpx;
  border-radius: 16rpx;
}
.option .order_num1{
  width: 52rpx;
}
.order_num view{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  top: 0;

}
.order_num image{
  width: 100%;
  height:100%;
}

.order_item{
  padding: 14rpx 24rpx 24rpx;
  margin-bottom: 14rpx;
  width:646rpx;
}
.order_store_info {
  padding-bottom: 46rpx;
  line-height: 44rpx;
}
.order_store_info image{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right:12rpx ;
}
.order_store_info .store_name{
  width: 460rpx;
  height: 44rpx;
  overflow: hidden;
  padding-right: 40rpx;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(1,1,1,1);
}
.order_store_info text{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(130,130,130,1);
}

.order_info image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.count {
  font-size:26rpx;
  color: #474848;
  line-height: 46rpx;
}
.count text{
  font-weight: bold;
  margin-right:36rpx; 
}
.other_info{
  padding-top: 20rpx;
  line-height: 58rpx;
}
.countdown{
  width:256rpx;
  height:20rpx;
  font-size:20rpx;
  font-weight:500;
  color:rgba(147,144,144,1);
}
.countdown text{
  color: #FD0D1A;
}
.button navigator,
.button button{
  min-width:154rpx;
  height:56rpx;
  border:1px solid rgba(201,201,201,1);
  border-radius:28rpx;
  font-size:25rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(60,60,60,1);
  line-height:56rpx;
  text-align: center;
  margin-left: 20rpx;
}
.button button{
  background-color:#fff;
}