  height: 61rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(200,199,200,1);
  color: #C8C7C8;
  font-size: 22rpx;
  line-height: 61rpx;
  text-align: center;
}
/* 重新获取 */
.reacquire{
/* border:1rpx solid #FF1D3A;  */
background-color: #FF1D3A;
color: #FFFFFF;
