  top: 510rpx;
}
/*账号密码登录 */
.login{
  position: absolute;
  top: 553rpx;
  left: 571rpx;
  font-size: 26rpx;
  color: #FF1D3A;
}
/* 进入按钮 */
.enter{
  position: absolute;
  top: 650rpx;
  left: 24rpx;
