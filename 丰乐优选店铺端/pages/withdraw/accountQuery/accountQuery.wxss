/* pages/withdraw/accountQuery/accountQuery.wxss */

page {
  background: #eee;
}
/* 到账查询头部 */
.accountQuery {
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.accountQuery >view {
  float: left;
}

.accountQuery >view:nth-child(1) {
  width: 20%;
  height: 80rpx;
  margin: 10rpx 0 0 10rpx;
  border-right: 1rpx solid #ddd;
  position: relative;
}

.accountQuery >view:nth-child(1)>text {
  position: absolute;
  margin: 10rpx 0 0 10rpx;
  color: #666;
  font-size: 18rpx;
}

.accountQuery >view:nth-child(1)>view {
  position: absolute;
  margin: 36rpx 0 0 10rpx;
  font-size: 32rpx;
  color: #111;
}

.accountQuery >view:nth-child(1)>view>text text{
  font-size: 20rpx;
  margin: 0 10rpx;
  line-height: 50rpx;
  color: #333;
  position: absolute;
}

.accountQuery >view:nth-child(1)>view>view {
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid #111;
  position: absolute;
  margin:-20rpx 0 0 80rpx;

}

.accountQuery >view:nth-child(2) {
  height: 80rpx;
  margin: 10rpx 0 0 10rpx;
  position: relative;
  color:#666;
  font-size: 20rpx;
  line-height: 40rpx;
}

