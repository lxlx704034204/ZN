/* pages/withdraw/transactionRecord/transactionRecord.wxss */

page {
  background: #eee;
}
/*导航栏*/
.navBox {
  width: 100%;
  padding-bottom: 6rpx;
  background: #fff;
  border-bottom: 1rpx solid #ddd;
}

.navBar {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 0rpx 5%;
  border-radius: 8rpx;
}

.navBar> view {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}


.navBar .active {
  color:red;
  border-bottom: 2rpx solid red;
}
/* 交易记录列表 */
.dealList{
  width:100%;
  height: 120rpx;
  background: #fff;
  position: relative;
  border-bottom: 1rpx solid #ddd;
}
.dealList >text{
  position: absolute;
}
.dealList >text:nth-child(1){
  color:#333;
  font-size: 32rpx;
  margin:20rpx 0 0 20rpx;
}
.dealList >text:nth-child(2){
  font-size: 20rpx;
  color:#666;
  margin:80rpx 0 0 20rpx;
}
.dealList >text:nth-child(3){
  width:20%;
  font-size: 24rpx;
  color:red;
  margin:20rpx 0 0 76%;
  text-align: right;
}
.dealList >text:nth-child(4){
  width:20%;
  font-size: 24rpx;
  color:red;
  margin:80rpx 0 0 76%;
  text-align: right;
}

/* 结束 */
.overList{
  width:100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
