<image src="../../../static/images/index/loginBg.png" class=".bgImg" />
<view class="form">
  <view class="Input">
    <view>手机号</view>
    <input type='number' maxlength='11' placeholder='请输入手机号' value='{{phoneNumber}}' bindinput='binPhone' />
  </view>
  <view class="Input">
    <view>密码</view>
    <input password='true' placeholder='请输入密码' value='{{password}}' bindinput='binPsd' />
  </view>
  <button class='btn' bindtap="binLogin">确定</button>
  <view class="forget" bindtap="forget">忘记密码</view>
</view>








