page {
  background: #eee;
}
/*搜索输入框*/
.searchBox {
  width:100%;
  height:60rpx;
  position: fixed;
  top: 0;
  background: #FFF;
  padding:20rpx 0;
  z-index: 99;
}
.searchBox > view:nth-child(1) {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 99;
}
.searchBox > view:nth-child(1) >image {
  width: 100%;
  height: 100%;
}
.searchBox >input:nth-child(2) {
  width: 80%;
  height: 58rpx;
  border-radius: 10rpx;
  background: #fff;
  margin-left: 2%;
  display: inline-block;
  vertical-align: middle;
  padding-left: 68rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  color: #333;
  border:1rpx solid #ddd;
  position: absolute;
  background: #eee;
}
.searchBox >view:nth-child(3){
  position: absolute;
  width:10%;
  height:50rpx;
  background: #ddd;
  float: left;
  border-radius: 8rpx;
  margin-left:85%;
  padding:5rpx 10rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  color:#333;
}
.titleNav{
  width:100%;
  height: 70rpx;
  background: #fff;
  position: fixed;
  top:90rpx;
  border-top: 1rpx solid #ddd;
}
.titleNav > view{
  width:20%;
  height: 60rpx;
  font-size: 24rpx;
  float: left;
  line-height: 60rpx;
  text-align: center;
  margin:0 15%;
}
.titleNav > .active{
  color:red;
  border-bottom: 1rpx solid red;
}









/* 会员列表 */
.memberList{
  width:100%;
  margin-top:200rpx;
}
/* 售后申请卡片 */
.afterCard{
  width:100%;
  background: #fff;
  padding:2%;
  margin-top: 20rpx;
}
.afterCard >view{
  width:96%;
}
.afterCard >view:nth-child(1){
  font-size: 24rpx;
  color:#999;
  line-height: 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.afterCard >view:nth-child(2){
  width:96%;
  height: 160rpx;
  position: relative;
}
.afterCard >view:nth-child(2) > image,.afterCard >view:nth-child(2) > text{
  position: absolute;
  color:#999;
  font-size: 20rpx;
}
.afterCard >view:nth-child(2) > image:nth-child(1){
  width:100rpx;
  height: 100rpx;
  margin:10rpx 0 0 20rpx;
}
.afterCard >view:nth-child(2) > text:nth-child(2){
  margin:10rpx 0 0 150rpx;
  color:#333;
  font-size: 24rpx;
}
.afterCard >view:nth-child(2) > text:nth-child(3){
  margin:80rpx 0 0 150rpx;
}
.afterCard >view:nth-child(2) > text:nth-child(4){
  margin:130rpx 0 0 20rpx;
  
}
.afterCard > .recordBar{
  width:96%;
  height: 50rpx;
  background: rgba(233, 233, 107, 0.411);
  position: relative;
  color:#333;
  font-size: 20rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
}

.afterCard >.recordPhone{
  width:96%;
  height: 50rpx;
  position: relative;
}
.afterCard >.recordPhone > text{
  position: absolute;
  line-height: 50rpx;
}
.afterCard >.recordPhone > text:nth-child(1){
  margin:0rpx 0 0 20rpx;
  color:#999;
  font-size: 20rpx;
}
.afterCard >.recordPhone > text:nth-child(2){
  width:20%;
  height: 50rpx;
  border:1rpx solid red;
  border-radius: 8rpx;
  margin:0rpx 0 0 78%;
  text-align: center;
  color:red;
}
.afterCard >.recordPhone >.cancel{
  border:1rpx solid green !important;
  color:green !important;
  margin-top: 6rpx !important;
}


