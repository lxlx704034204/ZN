
page {
  background: #eee;
}
/*搜索输入框*/
.searchBox {
  width:100%;
  height:60rpx;
  position: relative;
  background: #ececec;
  padding:20rpx 0;
}
.searchBox > view:nth-child(1) {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 99;
}
.searchBox > view:nth-child(1) >image {
  width: 100%;
  height: 100%;
}
.searchBox >input:nth-child(2) {
  width: 80%;
  height: 58rpx;
  border-radius: 10rpx;
  background: #fff;
  margin-left: 2%;
  display: inline-block;
  vertical-align: middle;
  padding-left: 68rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  color: #333;
  border:1rpx solid #ddd;
  position: absolute;
}
.searchBox >view:nth-child(3){
  position: absolute;
  width:10%;
  height:50rpx;
  background: #ddd;
  float: left;
  border-radius: 8rpx;
  margin-left:85%;
  padding:5rpx 10rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  color:#333;
}
/*导航*/

.navBox {
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background: #fff;
}

.navBar {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 20rpx 5%;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  border-radius: 8rpx;
  border: 1rpx solid red;
  font-size: 24rpx;
}

.navBar> view {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  border-left: 1rpx solid red;
}

.navBar> view:nth-child(1) {
  border: 0;
}

.navBar .active {
  color: #fff;
  background: red;
}
/*排名*/
