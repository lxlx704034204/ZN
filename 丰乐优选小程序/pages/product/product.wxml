  </swiper-item>
</swiper>

<!--------------------底部悬浮窗------------------------>
      <view class="page-bottom">
        <navigator class="p-b-btn" url="/pages/index/index" open-type="switchTab">
          <text class="yticon icon-xiatubiao--copy"></text>
          <text>首页</text>
        </navigator>
        <navigator class="p-b-btn" url="/pages/cart/cart" open-type="switchTab">
          <text class="yticon icon-gouwuche"></text>
          <text>购物车</text>
        </navigator>
        <view data-event-opts="{{[['tap',[['toFavorite',['$event']]]]]}}" class="{{['p-b-btn',(favorite)?'active':'']}}" bindtap="__e">
          <text class="yticon icon-shoucang"></text>
          <text>分享</text>
        </view>
        <view class="action-btn-group">
          <button class=" action-btn no-border buy-now-btn" type="primary" data-event-opts="{{[['tap',[['buy',['$event']]]]]}}" bindtap="submit">立即购买</button>
          <button class=" action-btn no-border add-cart-btn" type="primary">加入购物车</button>
        </view>
      </view>