        <view>预售时间：03月17日</view>
        <view>提货时间：03月18日</view>
        <view>今日已售
          <text>5012</text>份</view>
        <view>限量25000份</view>
      </view>
      <!-----商品详情标题--------->
      <view class="detail-desc">
