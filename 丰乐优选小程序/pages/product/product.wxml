        </view>
        <view class="c-row b-b">
          <text class="tit">商品详情</text>
          <view class="con-list">
            <text>供应商：新巷渔村食品</text>
            <text>规格：新巷渔村食品</text>
            <text>产地：新巷渔村食品</text>
            <text>供应商：新巷渔村食品</text>
          </view>
        </view>
        <view class="c-row b-b">
          <text class="tit">服务</text>
          <view class="bz-list con">
            <text>新巷渔村食品</text>
            <text>新巷渔村食品</text>
          </view>
        </view>
      </view>
      <!-----图文详情标题--------->
      <view class="detail-desc">
        <view class="d-header">
          <text>图文详情</text>
        </view>
        <rich-text nodes="{{desc}}"></rich-text>
      </view>
      <!-----图文详情内容--------->
      <scroll-view scroll-y="true" class="goodsImage" scroll-with-animation="true">
        <block wx:for="{{imgList}}" wx:for-item="lcai" wx:key="index">
          <image src="{{lcai}}"></image>
        </block>
      </scroll-view>

      
    </scroll-view>
  </swiper-item>
  <!------------------------ 3.购买记录 ----------------------------------------------------->
  <swiper-item>
    <scroll-view scroll-y class="scroll-box">
      <view class="infoSum">
        目前共
        <text>28277</text>人参与购买，商品共销售
        <text>38485</text>份
      </view>
      <view class="purchaseList" wx:for='{{15}}' wx:key='index'>
        <image src="/static/temp/h1.png"></image>
        <view>杨*</view>
        <view>2020-03-21 15:15:14</view>
        <view>
          <text>1</text>份</view>
      </view>
