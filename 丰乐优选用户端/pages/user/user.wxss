/*头部栏*/

.user-section {
  height: 520rpx;
  padding: 100rpx 30rpx 0;
  position: relative;
}

/*头部背景图片*/

.user-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  filter: blur(1px);
  opacity: 0.7;
}

/*用户信息框*/

.user-info-box {
  height: 180rpx;
  position: relative;
  z-index: 1;
  color: #fff;
}

/*用户头像*/

.user-info-box >image:nth-child(1) {
  width: 130rpx;
  height: 130rpx;
  margin-top: 20rpx;
  position: absolute;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

/*用户名称*/

.user-info-box >text:nth-child(2) {
  position: absolute;
  margin: 20rpx 0 0 150rpx;
  font-size: 38rpx;
}

/*用户手机号*/

.user-info-box >text:nth-child(3) {
  position: absolute;
  margin: 80rpx 0 0 150rpx;
  font-size: 38rpx;
}

/*登陆按钮*/

.login {
  width: 25%;
  position: absolute;
  margin: 50rpx 0 0 150rpx;
  padding: 0;
  font-size: 38rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0);
}

.login::after {
  border: none;
}

/*提货二维码*/

.qr {
  width: 30%;
  height: 50rpx;
  left: 30rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  margin: 80rpx 0 0 70%;
  position: absolute;
  background: rgba(0, 0, 0, 0.3);
  text-align: center;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}

.qr >image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  float: left;
  margin-top: 5rpx;
  margin-left: 20rpx;
}

/*二维码弹出框样式*/
.modalDlg {
  width: 60%;
  height: 450rpx;
  position: absolute;
  top: 50%;
  left: 20%;
  z-index: 9999;
  background-color: #fff;
}

/*全局遮罩层*/

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

/*二维码图片*/

.bg {
  width: 100%;
  height: 100%;
}

/*订单栏*/

.my_order {
  height: 200rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  position: relative;
  padding: 20rpx 24rpx;
}

/*订单标题*/

.my_order > view:first-child {
  font-size: 30rpx;
  color: #303133;
}

/*订单栏状态*/

.my_order > view:nth-child(2) {
  display: flex;
  justify-content: space-around;
  align-content: center;
  border-radius: 10rpx;
}

.my_order > view:nth-child(2) > view {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #303133;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

.my_order > view:nth-child(2) > view:active {
  background: rgba(0, 0, 0, 0.1);
}

