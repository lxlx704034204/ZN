/*框*/

.my_box {
  width: 92%;
  height: 300rpx;
  margin-left: 4%;
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: #fff;
  position: relative;
  font-size: 30rpx;
}

/*框标题*/

.box_title {
  height: 100rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #ddd;
}

.my_box >view:nth-child(2) {
  height: 80rpx;
  color: #f3453fd9;
  border-top: 1px solid #ddd;
  font-size: 32rpx;
  line-height: 80rpx;
}

.my_box >view:nth-child(3) {
  color: #666;
  font-size: 24rpx;
}

.my_box >view:nth-child(4) {
  height: 80rpx;
  line-height: 80rpx;
  color: rgba(0, 0, 0, 0.8);
  font-size: 32rpx;
}

.my_box >view:nth-child(4) > text {
  color: #f3dc77;
}

/*提示信息*/

.hint {
  width: 92%;
  margin-left: 4%;
  margin-top: 50rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 50rpx;
}

.hint > view {
  margin-top: 20rpx;
}

.hint > view:nth-child(2) > text {
  color: #ff8c00;
}

